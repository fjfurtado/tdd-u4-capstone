<h2>Save a video</h2>
    
<form class="input-form" action="/videos/create" method="post" >
    {{#with video.errors.title as |error|}}
        <span class="error">{{error.message}}</span>
    {{/with}}
    <input type="text" id="title-input" name="title" value="{{video.title}}"></input>
    {{#with video.errors.url as |error|}}
        <span class="error">{{error.message}}</span>
    {{/with}}
    <input type="text" id="url-input" name="url" value="{{video.url}}"/>

    <textarea id="description-input" name="description" >{{video.description}}</textarea>
    
    <input id="submit-button" class="add-video-button" type="submit" value="Save"></input>
</form>